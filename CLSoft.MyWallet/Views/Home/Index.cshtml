@using CLSoft.MyWallet.Models.Home
@model DashboardViewModel

@{
    ViewData["Title"] = "Home Page";
    var hasSelectedWallet = Model.Wallets.Any(w => w.IsSelected);
}

<div class="row">
    <div class="col-sm-4">
        <h4>Your wallets</h4>

        @Html.DisplayFor(m => m.Wallets)

        <a asp-controller="Wallets" asp-action="Add" class="card-anchor">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">New wallet</h5>
                    <p class="card-text">Register a new wallet.</p>
                </div>
            </div>
        </a>

        @if (hasSelectedWallet)
        {
            <a asp-controller="Home" asp-action="Index">Select all wallets</a>
        }
    </div>
    <div class="col-sm-8">
        <div class="row">
            <div class="col">
                <h4>Current balance</h4>
                <p>@Model.CurrentBalance.CurrentBalance</p>
            </div>
            <div class="col">
                <canvas id="balance-chart"></canvas>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4>Last transactions</h4>
                @if (hasSelectedWallet)
                {
                    <a asp-controller="Transactions" asp-action="Add" asp-route-walletId="@(Model.Wallets.First(w => w.IsSelected).Id)">Register transaction</a>
                }
                else
                {
                    <a asp-controller="Transactions" asp-action="Add">Register transaction</a>
                }
                <table class="table">
                    <tbody>
                        @foreach (var transaction in Model.Transactions)
                        {
                            <tr>
                                <td>@transaction.Description</td>
                                <td>@transaction.WalletName</td>
                                <td>@transaction.Amount</td>
                                <td>@transaction.RegisteredOn</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/chart.min.js"></script>

    <script>
        var timeBalance = @(Html.Raw(Json.Serialize(Model.TimeBalance)));
    </script>

    <script src="~/js/pages.min.js"></script>
}