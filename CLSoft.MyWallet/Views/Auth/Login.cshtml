@using CLSoft.MyWallet.Models.Auth
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_NotLoggedInLayout";
}

<form asp-action="Login" asp-controller="Auth" asp-route-returnurl="@Context.Request.Query["returnUrl"]" method="post">
    <h2>Login</h2>

    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" autofocus />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe"></label>
    </div>

    <a asp-controller="Auth" asp-action="ForgotPassword" class="btn btn-block btn-link text-right">Forgot your password?</a>
    <button type="submit" class="btn btn-primary btn-block">Login</button>
    <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary btn-block">Register</a>
</form>

@section scripts {
    <script src="~/js/validation.min.js"></script>
}