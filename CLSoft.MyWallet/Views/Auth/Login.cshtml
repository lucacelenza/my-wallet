@using CLSoft.MyWallet.Models.Auth
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-controller="Auth" method="post" class="small-form">
    <h2>Login</h2>

    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="RememeberMe" class="form-check-input" />
        <label asp-for="RememeberMe"></label>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Login</button>
    <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary btn-block">Register</a>
</form>

@section scripts {
    <script src="~/js/validation.min.js"></script>
}