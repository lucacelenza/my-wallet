@using CLSoft.MyWallet.Models.Transactions
@model TransactionViewModel

@{
    ViewData["Title"] = "Register transaction";
}

<form asp-controller="Transactions" asp-action="Add" method="post">
    <h2>Register transaction</h2>

    <div class="form-group">
        <label asp-for="SelectedWalletId"></label>
        <select asp-for="SelectedWalletId" asp-items="@Model.Wallets" class="form-control" autofocus></select>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        @Html.EditorFor(m => m.Type)
    </div>

    <div class="form-group">
        @Html.EditorFor(m => m.Amount)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section scripts {
    <script src="~/js/validation.min.js"></script>
}